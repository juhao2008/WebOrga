<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.orga.domain">

	<class name="School" table="t_School">

		<!-- 主键学校编号 -->
		<id name="schoolNumber" type="string" length="20">
			<generator class="assigned" />
		</id>

		<!-- 简单字符串属性: 学校名称 -->
		<property name="schoolName" column="schoolName" type="string"
			length="20" />

		<!-- 简单日期型属性: 成立日期 -->
		<property name="schoolBirthDate" column="schoolBirthDate"
			type="string" length="10" />

		<!-- 简单字符串属性: 校长姓名 -->
		<property name="schoolManager" column="schoolManager" type="string"
			length="10" />

		<!-- 简单字符串属性: 联系电话 -->
		<property name="schoolTelephone" column="schoolTelephone"
			type="string" length="20" />

		<property name="schoolAddress" column="schoolAddress" type="string"
			length="20" />

		<!-- 简单字符串属性: 附加信息 -->
		<property name="schoolMemo" column="schoolMemo" type="string"
			length="100" />

	</class>

</hibernate-mapping>
 
